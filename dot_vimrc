" plugins

call plug#begin()

Plug 'tpope/vim-sensible'

Plug 'tpope/vim-surround'

Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }
Plug 'itchyny/lightline.vim'

call plug#end()

" settings

set mouse=a

set clipboard^=unnamed

set expandtab
set tabstop=4
set softtabstop=-1
set shiftwidth=0

set relativenumber

set colorcolumn=80,100

